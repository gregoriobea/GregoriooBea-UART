#include <WiFi.h>
#include <WebServer.h>

const char* ssid = "YourWiFi";
const char* password = "YourPassword";

WebServer server(80);

void setup() {
  Serial.begin(115200); // Debugging via Serial Monitor
  Serial2.begin(9600, SERIAL_8N1, 16, 17); // UART2: RX=16, TX=17 (connected to Arduino's TX/RX)

  // Connect to WiFi
  WiFi.begin(ssid, password);
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }
  
  Serial.println("\nWiFi Connected!");
  Serial.print("IP: ");
  Serial.println(WiFi.localIP());

  // Web UI
  server.on("/", HTTP_GET, []() {
    server.send(200, "text/html", 
      "<h1>LED Control</h1>"
      "<a href='/on'><button>ON</button></a><br><br>"
      "<a href='/off'><button>OFF</button></a>");
  });

  server.on("/on", []() {
    Serial2.println("ON");  // Send to Arduino via Serial2
    server.send(200, "text/plain", "LED turned ON");
  });

  server.on("/off", []() {
    Serial2.println("OFF");
    server.send(200, "text/plain", "LED turned OFF");
  });

  server.begin();
}

void loop() {
  server.handleClient();
}void setup() {
  Serial.begin(9600);     // Communication with ESP32
  pinMode(8, OUTPUT);     // LED connected to digital pin 8
}

void loop() {
  if (Serial.available()) {
    String command = Serial.readStringUntil('\n');
    command.trim(); // Clean newline/whitespace

    if (command == "ON") {
      digitalWrite(8, HIGH);
      Serial.println("LED ON");
    } 
    else if (command == "OFF") {
      digitalWrite(8, LOW);
      Serial.println("LED OFF");
    }
  }
}
